<div class="card mb-3">
  <h2 class="card-header h4">
    Authorized Associate #<%= authorized_associate.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>First name</dt>
      <dd><%= authorized_associate.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= authorized_associate.last_name %></dd>

      <dt>Phone</dt>
      <dd><%= authorized_associate.phone %></dd>

      <dt>Dog owner profile</dt>
      <dd>
        <% if @authorized_associate.dog_owner_profile.present? %>
          <%= link_to authorized_associate.dog_owner_profile, authorized_associate.dog_owner_profile %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back authorized_associate, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_authorized_associate_url(authorized_associate), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to authorized_associate, method: :delete, data: { confirm: "Do you really want to delete this authorized_associate?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(authorized_associate.updated_at) %> ago
  </div>
</div>
