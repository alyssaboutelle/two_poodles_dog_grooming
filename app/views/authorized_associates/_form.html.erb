<% was_validated = authorized_associate.errors.any? %>

<%= form_with(model: authorized_associate, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for first_name start -->
  <div class="form-group">
    <% first_name_class = "form-control" %>
    <% first_name_was_invalid = authorized_associate.errors.include?(:first_name) %>

    <% if was_validated %>
      <% if first_name_was_invalid %>
        <% first_name_class << " is-invalid" %>
      <% else %>
        <% first_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :first_name %>
    <!-- Input for first_name start -->
    <%= f.text_field :first_name, class: first_name_class, placeholder: "Enter first name" %>
    <!-- Input for first_name end -->
    <% if first_name_was_invalid %>
      <% authorized_associate.errors.full_messages_for(:first_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for first_name end -->
  <!-- Label and input for last_name start -->
  <div class="form-group">
    <% last_name_class = "form-control" %>
    <% last_name_was_invalid = authorized_associate.errors.include?(:last_name) %>

    <% if was_validated %>
      <% if last_name_was_invalid %>
        <% last_name_class << " is-invalid" %>
      <% else %>
        <% last_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :last_name %>
    <!-- Input for last_name start -->
    <%= f.text_field :last_name, class: last_name_class, placeholder: "Enter last name" %>
    <!-- Input for last_name end -->
    <% if last_name_was_invalid %>
      <% authorized_associate.errors.full_messages_for(:last_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for last_name end -->
  <!-- Label and input for phone start -->
  <div class="form-group">
    <% phone_class = "form-control" %>
    <% phone_was_invalid = authorized_associate.errors.include?(:phone) %>

    <% if was_validated %>
      <% if phone_was_invalid %>
        <% phone_class << " is-invalid" %>
      <% else %>
        <% phone_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :phone %>
    <!-- Input for phone start -->
    <%= f.text_field :phone, class: phone_class, placeholder: "Enter phone" %>
    <!-- Input for phone end -->
    <% if phone_was_invalid %>
      <% authorized_associate.errors.full_messages_for(:phone).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for phone end -->
  <!-- Label and input for dog_owner_profile_id start -->
  <div class="form-group">
    <% dog_owner_profile_class = "form-control" %>
    <% dog_owner_profile_was_invalid = authorized_associate.errors.include?(:dog_owner_profile) %>

    <% if was_validated %>
      <% if dog_owner_profile_was_invalid %>
        <% dog_owner_profile_class << " is-invalid" %>
      <% else %>
        <% dog_owner_profile_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dog_owner_profile_id %>
    <!-- Input for dog_owner_profile_id start -->
    <%= f.collection_select :dog_owner_profile_id, DogOwnerProfile.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for dog_owner_profile_id end -->
    <% if dog_owner_profile_was_invalid %>
      <% authorized_associate.errors.full_messages_for(:dog_owner_profile).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dog_owner_profile_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
