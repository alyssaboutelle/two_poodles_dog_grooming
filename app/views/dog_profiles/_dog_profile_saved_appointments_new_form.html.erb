<%= form_with(model: @saved_appointment, local: true) do |f| %>

  <%= f.hidden_field :dog_id, value: @dog_profile.id %>

  <div class="form-group">
    <%= f.label :owner_id %>

    <%= f.collection_select :owner_id, DogOwnerProfile.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :nickname_for_appointment %>

    <%= f.text_field :nickname_for_appointment, class: "form-control" %>
  </div>

  <%= f.submit "Create saved appointment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
