<% was_validated = dog_profile.errors.any? %>

<%= form_with(model: dog_profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for dog_name start -->
  <div class="form-group">
    <% dog_name_class = "form-control" %>
    <% dog_name_was_invalid = dog_profile.errors.include?(:dog_name) %>

    <% if was_validated %>
      <% if dog_name_was_invalid %>
        <% dog_name_class << " is-invalid" %>
      <% else %>
        <% dog_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dog_name %>
    <!-- Input for dog_name start -->
    <%= f.text_field :dog_name, class: dog_name_class, placeholder: "Enter dog name" %>
    <!-- Input for dog_name end -->
    <% if dog_name_was_invalid %>
      <% dog_profile.errors.full_messages_for(:dog_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dog_name end -->
  <!-- Label and input for owner_id start -->
  <div class="form-group">
    <% owner_class = "form-control" %>
    <% owner_was_invalid = dog_profile.errors.include?(:owner) %>

