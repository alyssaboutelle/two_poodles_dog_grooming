        <% owner_class << " is-invalid" %>
      <% else %>
        <% owner_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :owner_id %>
    <!-- Input for owner_id start -->
    <%= f.collection_select :owner_id, DogOwnerProfile.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for owner_id end -->
