<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Authorized Associates

    <a data-toggle="collapse" href="#dog_owner_profile_authorized_associates_new_form">
      Add authorized associate
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dog_owner_profile.authorized_associates.each do |authorized_associate| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to authorized_associate, authorized_associate %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to authorized_associate, method: :delete, data: { confirm: "Do you really want to delete this authorized_associate" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dog_owner_profile_authorized_associates_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
