<%= search_form_for @q, :class => collapse_search_form, :id => "dog_owner_profiles_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :first_name_cont, "First name contains" %>
    <%= f.text_field :first_name_cont, :class => "form-control", :placeholder => "First name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :authorized_associates_id, "Authorized associates" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :authorized_associates_id_gteq, :class => "form-control", :placeholder => "Authorized associates greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :authorized_associates_id_lteq, :class => "form-control", :placeholder => "Authorized associates less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email_cont, "Email contains" %>
    <%= f.text_field :email_cont, :class => "form-control", :placeholder => "Email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :home_address_cont, "Home address contains" %>
    <%= f.text_field :home_address_cont, :class => "form-control", :placeholder => "Home address contains" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_cont, "Phone contains" %>
    <%= f.text_field :phone_cont, :class => "form-control", :placeholder => "Phone contains" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name_cont, "Last name contains" %>
    <%= f.text_field :last_name_cont, :class => "form-control", :placeholder => "Last name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dog_profiles_dog_name_cont, "Dog profiles dog_name contains" %>
    <%= f.text_field :dog_profiles_dog_name_cont, :class => "form-control", :placeholder => "Dog profiles dog_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :authorized_associates_first_name_cont, "Authorized associates first_name contains" %>
    <%= f.text_field :authorized_associates_first_name_cont, :class => "form-control", :placeholder => "Authorized associates first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/dog_owner_profiles" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#dog_owner_profiles_filters">
  Show filters
</a>
