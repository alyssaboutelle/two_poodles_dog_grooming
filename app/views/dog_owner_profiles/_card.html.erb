<div class="card mb-3">
  <h2 class="card-header h4">
    Dog Owner Profile #<%= dog_owner_profile.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>First name</dt>
      <dd><%= dog_owner_profile.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= dog_owner_profile.last_name %></dd>

      <dt>Phone</dt>
      <dd><%= dog_owner_profile.phone %></dd>

      <dt>Home address</dt>
      <dd><%= dog_owner_profile.home_address %></dd>

      <dt>User</dt>
      <dd>
        <% if @dog_owner_profile.user.present? %>
          <%= link_to dog_owner_profile.user, dog_owner_profile.user %>
        <% end %>
      </dd>

      <dt>Email</dt>
      <dd><%= dog_owner_profile.email %></dd>

      <dt>Authorized associates</dt>
      <dd><%= dog_owner_profile.authorized_associates_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back dog_owner_profile, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @dog_owner_profile.user %>
          <%= link_to edit_dog_owner_profile_url(dog_owner_profile), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @dog_owner_profile.user %>
          <%= link_to dog_owner_profile, method: :delete, data: { confirm: "Do you really want to delete this dog_owner_profile?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(dog_owner_profile.updated_at) %> ago
  </div>
</div>
