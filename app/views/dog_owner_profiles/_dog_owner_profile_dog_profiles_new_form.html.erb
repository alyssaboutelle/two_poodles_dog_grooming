<%= form_with(model: @dog_profile, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :dog_name %>

    <%= f.text_field :dog_name, class: "form-control" %>
  </div>

  <%= f.hidden_field :owner_id, value: @dog_owner_profile.id %>

  <div class="form-group">
    <%= f.label :breed %>

    <%= f.text_field :breed, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth %>

    <%= f.text_field :date_of_birth, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :allergies %>

    <%= f.text_field :allergies, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :behavior_notes %>

    <%= f.text_field :behavior_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :treats %>

    <%= f.text_field :treats, class: "form-control" %>
  </div>

  <%= f.submit "Create dog profile", class: "btn btn-block btn-outline-secondary" %>
<% end %>
