<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Saved Appointments

    <a data-toggle="collapse" href="#dog_owner_profile_saved_appointments_new_form">
      Add saved appointment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dog_owner_profile.saved_appointments.each do |saved_appointment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to saved_appointment, saved_appointment %>

        <%= link_to saved_appointment, method: :delete, data: { confirm: "Do you really want to delete this saved_appointment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dog_owner_profile_saved_appointments_new_form">
        <%= render partial: "dog_owner_profiles/dog_owner_profile_saved_appointments_new_form" %>
      </div>
    </div>

  </ul>
</div>
